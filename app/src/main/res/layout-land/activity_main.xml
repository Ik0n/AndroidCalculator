<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:gravity="bottom"
        >

        <EditText
            style="@style/edit_texts"
            android:id="@+id/edit_operation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_edit_operation"
            android:textSize="@dimen/edit_operation_landscape"
            android:editable="false"
            />

        <EditText
            style="@style/edit_texts"
            android:id="@+id/edit_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_edit_answer"
            android:textSize="@dimen/edit_answer"
            android:editable="false"
            />


    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="8">

        <TableRow>

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_number_button"
                android:id="@+id/button_7"
                android:text="@string/_7"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_number_button"
                android:id="@+id/button_8"
                android:text="@string/_8"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_number_button"
                android:id="@+id/button_9"
                android:text="@string/_9"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_action_button"
                android:id="@+id/button_multiplication"
                android:text="@string/_multiplication"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_action_button"
                android:id="@+id/button_division"
                android:text="@string/_division"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_action_button"
                android:id="@+id/button_clear"
                android:text="@string/_clear"
                />

        </TableRow>
        <TableRow>

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_number_button"
                android:id="@+id/button_4"
                android:text="@string/_4"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_number_button"
                android:id="@+id/button_5"
                android:text="@string/_5"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_number_button"
                android:id="@+id/button_6"
                android:text="@string/_6"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_action_button"
                android:id="@+id/button_addition"
                android:text="@string/_addition"
                />


            <com.google.android.material.button.MaterialButton
                style="@style/calculator_action_button"
                android:id="@+id/button_subtraction"
                android:text="@string/_subtraction"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_action_button"
                android:id="@+id/button_backspace"
                android:text="@string/_backspace"
                />

        </TableRow>

        <TableRow>

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_number_button"
                android:id="@+id/button_1"
                android:text="@string/_1"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_number_button"
                android:id="@+id/button_2"
                android:text="@string/_2"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_number_button"
                android:id="@+id/button_3"
                android:text="@string/_3"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_number_button"
                android:id="@+id/button_0"
                android:text="@string/_0"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_action_button"
                android:id="@+id/button_percent"
                android:text="@string/_percent"
                />

            <com.google.android.material.button.MaterialButton
                style="@style/calculator_action_button"
                android:id="@+id/button_even"
                android:text="@string/_even"
                />

        </TableRow>

    </TableLayout>



</LinearLayout>